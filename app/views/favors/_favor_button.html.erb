<% if current_user.favorite?(target_micropost) %>
  <%= form_for(current_user.favors.find_by(micropost_id: target_micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, target_micropost.id %>
    <%= f.submit 'Unfavorite', class: 'btn btn-outline-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favors.build) do |f| %>
    <%= hidden_field_tag :micropost_id, target_micropost.id %>
    <%= f.submit 'Favorite', class: 'btn btn-warning btn-xs' %>
  <% end %>
<% end %>